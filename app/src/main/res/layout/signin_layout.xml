<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        android:background="@color/button_color"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/one_hundred_twenty_sp"
            android:layout_height="@dimen/one_hundred_twenty_sp"
            android:layout_marginTop="0dp"
            android:src="@drawable/app_logo"
            android:visibility="visible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_medium_with_alpha"
            android:padding="@dimen/five_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:textColorHint="@android:color/white">

            <com.neopixl.pixlui.components.edittext.EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/message"
                android:drawablePadding="@dimen/fifteen_dp"
                android:hint="@string/enter_email"
                android:inputType="textEmailAddress"
                android:nextFocusLeft="@+id/edtpassword"
                android:nextFocusUp="@+id/edtpassword"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/sixteen_sp"
                pixlui:typeface="Titillium-Regular.otf" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/background_medium_with_alpha"
            android:padding="@dimen/five_dp"
            android:textColorHint="@android:color/white">

            <com.neopixl.pixlui.components.edittext.EditText
                android:id="@+id/edtpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/padlock"
                android:drawablePadding="@dimen/fifteen_dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/sixteen_sp"
                pixlui:typeface="Titillium-Regular.otf" />
        </android.support.design.widget.TextInputLayout>

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/signin_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/thirty_dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/log_in"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_sp"
            pixlui:typeface="Titillium-Bold.otf" />


    </LinearLayout>


</RelativeLayout>