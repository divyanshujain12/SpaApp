<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_login_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_with_five_five"
        android:paddingBottom="@dimen/twenty_five_dp">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="@dimen/one_hundred_twenty_sp"
            android:layout_height="@dimen/one_hundred_twenty_sp"
            android:layout_gravity="center"

            android:scaleType="fitXY"
            android:src="@drawable/logo_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="@dimen/fifteen_dp">

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/txtInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/thirty_dp"
                android:text="@string/dummy_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/twenty_six_sp"
                android:visibility="visible"
                pixlui:typeface="Titillium-Regular.otf" />


            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/txtSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/fifteen_dp"
                android:text="@string/log_in"
                android:textColor="@android:color/black"
                android:textSize="@dimen/eighteen_sp"
                pixlui:typeface="Titillium-Bold.otf" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/txtSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_weight="1"
                android:background="@color/background_bottom_color"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/fifteen_dp"
                android:text="@string/sign_up"
                android:textColor="@android:color/white"
                android:textSize="@dimen/eighteen_sp"
                pixlui:typeface="Titillium-Bold.otf" />

        </LinearLayout>
    </FrameLayout>
</FrameLayout>