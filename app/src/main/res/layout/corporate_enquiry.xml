    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/requestAQuote">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/ten_dp">

            <com.neopixl.pixlui.components.textview.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_details"
                android:textSize="@dimen/twenty_sp"
                pixlui:typeface="Titillium-Bold.otf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"

                    android:padding="@dimen/five_dp"
                    android:textColorHint="@android:color/darker_gray">

                    <com.neopixl.pixlui.components.edittext.EditText
                        android:id="@+id/edtCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/company_name"
                        android:inputType="text"
                        android:nextFocusLeft="@+id/edtpassword"
                        android:nextFocusUp="@+id/edtpassword"
                        android:padding="@dimen/ten_dp"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="@dimen/sixteen_sp"
                        pixlui:typeface="Titillium-Regular.otf" />
                </android.support.design.widget.TextInputLayout>

                <include layout="@layout/horizontal_white_line" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"

                    android:padding="@dimen/five_dp"
                    android:textColorHint="@android:color/darker_gray">

                    <com.neopixl.pixlui.components.edittext.EditText
                        android:id="@+id/edtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/location_of_services"
                        android:inputType="text"
                        android:nextFocusLeft="@+id/edtpassword"
                        android:nextFocusUp="@+id/edtpassword"
                        android:padding="@dimen/ten_dp"

                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="@dimen/sixteen_sp"
                        pixlui:typeface="Titillium-Regular.otf" />
                </android.support.design.widget.TextInputLayout>

                <include layout="@layout/horizontal_white_line" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"

                    android:padding="@dimen/five_dp"
                    android:textColorHint="@android:color/darker_gray">

                    <com.neopixl.pixlui.components.edittext.EditText
                        android:id="@+id/edtContactPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/contact_person"
                        android:inputType="text"
                        android:nextFocusLeft="@+id/edtpassword"
                        android:nextFocusUp="@+id/edtpassword"
                        android:padding="@dimen/ten_dp"

                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="@dimen/sixteen_sp"
                        pixlui:typeface="Titillium-Regular.otf" />
                </android.support.design.widget.TextInputLayout>

                <include layout="@layout/horizontal_white_line" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"

                    android:padding="@dimen/five_dp"
                    android:textColorHint="@android:color/darker_gray">

                    <com.neopixl.pixlui.components.edittext.EditText
