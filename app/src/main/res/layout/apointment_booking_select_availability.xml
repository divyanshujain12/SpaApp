<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.neopixl.pixlui.components.textview.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/select_your_availability"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/eighteen_sp"
        pixlui:typeface="Titillium-Bold.otf" />


    <com.github.badoualy.datepicker.DatePickerTimeline
        android:id="@+id/calendarVW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mti_bgLblDateSelectedColor="@color/background_dark"
        app:mti_bgLblTodayColor="@color/background_dark"
        app:mti_lblLabelColor="@color/background_dark"
        app:mti_primaryColor="@color/colorPrimary"
        app:mti_primaryDarkColor="@color/background_dark" />

    <com.imanoweb.calendarview.CustomCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:calendarBackgroundColor="@android:color/transparent"
        app:calendarTitleTextColor="@android:color/black"
        app:currentDayOfMonthColor="@color/background_bottom_color"
        app:dayOfMonthTextColor="@color/black"
        app:dayOfWeekTextColor="@color/black"
        android:visibility="gone"
        app:disabledDayBackgroundColor="@android:color/white"
        app:disabledDayTextColor="@android:color/darker_gray"
        app:selectedDayBackgroundColor="@color/background_bottom_color"
        app:titleLayoutBackgroundColor="@android:color/transparent"
        app:weekLayoutBackgroundColor="@android:color/transparent" />
</LinearLayout>