<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spa1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/twenty_five_dp">

   <!-- <ImageView
        android:id="@+id/appLogo"
        android:layout_width="@dimen/one_hundred_twenty_sp"
        android:layout_height="@dimen/one_hundred_twenty_sp"
        android:layout_centerInParent="true"
        android:src="@drawable/app_logo" />-->

    <RelativeLayout
        android:id="@+id/contentRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/txtInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/fifty_dp"
            android:layout_marginTop="@dimen/fifty_dp"
            android:gravity="center"
            android:padding="@dimen/fifteen_dp"
            android:text="@string/dummy_text"
            android:textColor="@android:color/black"
            android:textSize="@dimen/twenty_four_sp"
            android:visibility="visible"
            pixlui:typeface="Titillium-Bold.otf" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/txtSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomViews"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="@string/skip_to_continue"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen_sp"
            pixlui:typeface="Titillium-Bold.otf" />

        <LinearLayout
            android:id="@+id/bottomViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/fifteen_dp"
            android:visibility="visible">

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/txtSignIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/black"
                android:gravity="center"
                android:padding="@dimen/ten_dp"
                android:text="@string/log_in"
                android:textColor="@android:color/white"
                android:textSize="@dimen/eighteen_sp"
                pixlui:typeface="Titillium-Regular.otf" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/txtSignUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_weight="1"
                android:background="@android:color/black"
                android:gravity="center"
                android:padding="@dimen/ten_dp"
                android:text="@string/sign_up"
                android:textColor="@android:color/white"
                android:textSize="@dimen/eighteen_sp"
                pixlui:typeface="Titillium-Regular.otf" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>