<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp"
    cardView:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_corner_rounded_pink"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/ten_dp">

            <ImageView
                android:layout_width="@dimen/eighty_dp"
                android:layout_height="@dimen/eighty_dp"
                android:background="@drawable/rounded_white_circle"
                android:padding="@dimen/ten_dp"
                android:src="@drawable/correct" />

            <com.neopixl.pixlui.components.textview.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                android:gravity="center"
                android:text="@string/success"
                android:textColor="#fff"
                android:textSize="@dimen/twenty_four_sp"
                pixlui:typeface="Titillium-Bold.otf" />
        </LinearLayout>

        <include layout="@layout/horizontal_white_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/ten_dp">

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/contentTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="center"
                android:padding="@dimen/eight_dp"
                android:text="@string/success"
                android:textColor="#000"
                android:textSize="@dimen/sixteen_sp"
                pixlui:typeface="Titillium-Regular.otf" />

            <com.neopixl.pixlui.components.textview.TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/eight_dp"
                android:text="@string/add_reminder_text"
                android:textColor="#000"
                android:textSize="@dimen/sixteen_sp"
                pixlui:typeface="Titillium-Regular.otf" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/yesTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_weight="6"
                    android:background="@drawable/alert_yes_button_background"
                    android:gravity="center"
                    android:padding="@dimen/twelve_dp"
                    android:text="@string/add_reminder"
                    android:textColor="#fff"
                    android:textSize="@dimen/eighteen_sp"
                    pixlui:typeface="Titillium-Bold.otf" />


                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/noTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:padding="@dimen/twelve_dp"
                    android:text="@string/close"

                    android:textColor="#000"
                    android:textSize="@dimen/eighteen_sp"
                    pixlui:typeface="Titillium-Bold.otf" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
